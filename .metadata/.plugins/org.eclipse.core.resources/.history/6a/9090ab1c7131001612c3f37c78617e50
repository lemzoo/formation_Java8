package com.company.tp.interfaces;

/**
 * Interface FournisseurDeCourant contient le contrat de service
 * @author Lamine BA
 *
 */
public interface FournisseurDeCourant {
	public void connecter(ConsommateurDeCourant consommateur);
	public void deconnecter(ConsommateurDeCourant consommateur);
	/**
	 * Methode permettant au fournisseur de demander de l'energie 
	 * @param pQuantiteWatts
	 */
	public void demanderEnergie(int pQuantiteWatts); 
	
	/**
	 * Retourne l'energie total fournie par le fournisseur
	 * @return
	 */
	public int getEnergieFournie();
}
